{
  "compilerOptions": {
    "target": "ES2020", // Specifies the ECMAScript target version.
    "module": "commonjs", // Sets the module system to CommonJS, used by Node.js.
    "strict": true, // Enables all strict type-checking options.
    "noEmit": false,
    "outDir": "./dist",
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules.
    "skipLibCheck": true, // Skips type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file names.
    "isolatedModules": true // Ensures each file can be safely transpiled without relying on other imports.
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ] // Excludes the node_modules directory and test files from compilation.
}